		comboBox.setModel(new DefaultComboBoxModel<>(options));
		comboBox.setSelectedItem("교수명"); // 기본 선택
		comboBox.setBounds(101, 98, 101, 27);
		panel.add(comboBox);

		table = new JTable();
		table.setBounds(50, 150, 700, 300);
		panel.add(table);
		//
		 
		
		 String sql_query="";
		 
		 switch (comboBox.getSelectedIndex()){
		 case 0:
		      sql_query = String.format("select  * from DB2024_Professor where Name='%s';",searchTextField.getText());

		 break;
		 
		 case 1:
		      sql_query = String.format("select  *from DB2024_Professor where ProfessorID ='%d';",(int)searchTextField.getText());

		 break;
		 
		 case 2:
		      sql_query = String.format("select  *from DB2024_Professor where 학과='%s';",searchTextField.getText());

		 break;
		 
		 
		 }//switch
		 Vector<Object> data = new Vector<Object>();
		 
		 try (Connection conn = DriverManager.getConnection("jdbc:mysql://localhost/DB2024Team04", "root", "root");
						 Statement stmt = conn.createStatement(); )
						 {
						 
						
						 //검색 쿼리

						 
					
						 ResultSet rset2 = stmt.executeQuery(sql_query);
						 
						 if(rset2.next()){
						 while( rset2.next()) {
						 data.add(rset2.getInt(1));
						 data.add(rset2.getString(2));
						 data.add(rset2.getString(3));
						 data.add(rset2.getString(4));
						 data.add (rset2.getString(5));
													                                
						 }	//while
						 				  
						 }//if
						 else data.add("검색결과 없음");
						 }//try
						 
						 catch (SQLException sqle) {
						 System.out.println("SQLException : " + sqle);
						 }//catch


		 
		 
		
	//	
	}//professor view
